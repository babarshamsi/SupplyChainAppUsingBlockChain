<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.supplychainapp"
    android:targetSandboxVersion="1">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SupplyChainApp"
        android:usesCleartextTraffic="true">
        <activity android:name="com.supplychainapp.RetailerActivity"/>
        <activity android:name="com.supplychainapp.WholeSellerActivity" />
        <activity android:name="com.supplychainapp.ConsumerActivity" />
        <activity android:name="com.supplychainapp.QRCodeActivity" />
        <activity android:name="com.supplychainapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.supplychainapp.ScanViewActivity" />
        <activity android:name="com.supplychainapp.SupplierActivity" />
    </application>

</manifest>