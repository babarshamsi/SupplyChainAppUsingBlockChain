<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomFontButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/swansea</item>
    </style>


    <style name="CustomButtonStyle" parent="CustomFontButtonStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="NormalButtonStyle" parent="CustomButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/custom_button_height</item>
        <item name="android:paddingStart">@dimen/general_space</item>
        <item name="android:paddingEnd">@dimen/general_space</item>
    </style>


    <style name="ProminentNormalButtonStyle" parent="NormalButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/prominent_normal_button_background</item>
        <item name="fontFamily">@font/swansea_bold</item>
        <item name="android:textSize">@dimen/medium_large_text_size</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent = "Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/cornFlowerBlue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/cornFlowerBlue</item>
    </style>

    <style name="TextInputLayoutEditTextStyle" parent = "Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
      <item name="android:textColor">@color/darkGray</item>
        <item name="backgroundTint">@color/cornFlowerBlue</item>
    </style>

    <style name="CustomCalenderStyle" parent = "ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>
    </style>

    <style name="DialogHeaderTextStyle" parent="HeaderTextStyle">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="fontFamily">@string/swansea_bold</item>
    </style>

    <style name="HeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:layout_marginBottom">@dimen/large_space</item>
        <item name="android:lineSpacingExtra">@dimen/general_space</item>
    </style>

    <style name="DialogContentTextStyle" parent="NormalTextStyle">
        <item name="android:textSize">@dimen/medium_large_text_size</item>
        <item name="fontFamily">@string/swansea</item>
        <item name="android:textColor">@color/coralDark</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="NormalTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/general_space</item>
    </style>

    <style name="DialogSecondaryContentTextStyle" parent="DialogContentTextStyle">
        <item name="android:textSize">@dimen/small_large_text_size</item>
        <item name="fontFamily">@string/swansea</item>
    </style>

    <style name="TransparentNormalButtonStyle" parent="NormalButtonStyle">
        <item name="android:background">@drawable/transparent_normal_button_background</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
    </style>

    <style name="customAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowMinWidthMajor">92%</item>
        <item name="android:windowMinWidthMinor">92%</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextFieldStyleForConsumerFields" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textSize">@dimen/small_extra_large_text_size</item>
    </style>

    <style name="TextFieldStyleForConsumerInfo" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">@dimen/medium_large_text_size</item>
    </style>

    <style name="TextTypeStyle" parent = "Widget.AppCompat.TextView">
        <item name="android:textColor">@color/coralDark</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>

    </style>


</resources>